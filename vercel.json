{
  "version": 2,
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "outputDirectory": "dist"
      }
    },
    {
      "src": "server/server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    
    {
      "src": "/api/(.*)",
      "dest": "server/server.js"
    },
    {
      "src": "/clerk",
      "dest": "server/server.js"
    },
    {
      "src": "/stripe",
      "dest": "server/server.js"
    },
    
    {
      "src": "/(.*)",
      "dest": "client/dist/index.html"
    }
  ]
}